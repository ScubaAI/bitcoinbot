generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ── Visitor / Anonymous Session ──────────────────────────────────────
model VisitorSession {
  id        String    @id @default(cuid())
  visitorId String?   @unique // hash o uuid generado en frontend/middleware
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  expiresAt DateTime?

  messages  Message[]
  tips      Tip[]
  feedbacks Feedback[]

  @@index([createdAt])
  @@index([visitorId])
}

// ── Chat Message ─────────────────────────────────────────────────────
model Message {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  content      String   @db.VarChar(4000)
  role         MessageRole
  tokensUsed   Int?     // solo para assistant
  metadata     Json?    // tool calls, citations, etc.

  session      VisitorSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId    String

  @@index([sessionId])
  @@index([createdAt(sort: Desc)])
}

// ── Lightning Tip / Donation ─────────────────────────────────────────
model Tip {
  id             String     @id @default(cuid())
  createdAt      DateTime   @default(now())
  amountSats     Int                    // satoshis
  fiatEquivalent Decimal?   @db.Decimal(10, 2) // ~USD, opcional
  memo           String?    @db.VarChar(280)
  paymentRequest String?    @db.Text
  preimage       String?                // para verificar settlement
  settledAt      DateTime?
  status         TipStatus  @default(PENDING)

  session        VisitorSession? @relation(fields: [sessionId], references: [id], onDelete: SetNull)
  sessionId      String?

  @@index([createdAt])
  @@index([status])
}

// ── User Feedback ────────────────────────────────────────────────────
model Feedback {
  id        String       @id @default(cuid())
  createdAt DateTime     @default(now())
  type      FeedbackType
  rating    Int?         @default(0) // 1–5
  message   String?      @db.Text
  helpful   Boolean?

  session   VisitorSession? @relation(fields: [sessionId], references: [id], onDelete: SetNull)
  sessionId String?
}

// ── Enums ────────────────────────────────────────────────────────────
enum MessageRole {
  user
  assistant
  system
}

enum TipStatus {
  PENDING
  SETTLED
  FAILED
  EXPIRED
  CANCELLED
}

enum FeedbackType {
  POSITIVE
  NEGATIVE
  SUGGESTION
  BUG
}