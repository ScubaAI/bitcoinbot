generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ── Visitor / Anonymous Session ──────────────────────────────────────
model VisitorSession {
  id        String    @id @default(cuid())
  visitorId String?   @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  expiresAt DateTime?

  messages  Message[]
  tips      Tip[]
  feedbacks Feedback[]

  // Relación con immune system
  immuneLogs    ImmuneLog[]
  bypassAttempts BypassAttempt[]

  @@index([createdAt])
  @@index([visitorId])
}

// ── Chat Message ─────────────────────────────────────────────────────
model Message {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  content      String   @db.VarChar(4000)
  role         MessageRole
  tokensUsed   Int?
  metadata     Json?

  session      VisitorSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId    String

  @@index([sessionId])
  @@index([createdAt(sort: Desc)])
}

// ── Lightning Tip / Donation ─────────────────────────────────────────
model Tip {
  id             String     @id @default(cuid())
  createdAt      DateTime   @default(now())
  amountSats     Int
  fiatEquivalent Decimal?   @db.Decimal(10, 2)
  memo           String?    @db.VarChar(280)
  
  // Blink-specific fields
  paymentRequest String?    @db.Text
  paymentHash    String?    @unique  // ← Agregado para verificación
  preimage       String?              // Settlement proof
  
  settledAt      DateTime?
  status         TipStatus  @default(PENDING)

  session        VisitorSession? @relation(fields: [sessionId], references: [id], onDelete: SetNull)
  sessionId      String?

  @@index([createdAt])
  @@index([status])
  @@index([paymentHash])  // ← Para lookups rápidos
}

// ── Immune System Logs (NUEVO) ──────────────────────────────────────
model ImmuneLog {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  
  // Identificación
  ip          String
  sessionId   String?
  visitorId   String?
  
  // Threat data
  threatScore Float
  category    String   // injection, sybil, finney, etc.
  signatures  String[] // Array de firmas detectadas
  action      String   // allow, challenge, ban, quarantine
  
  // Metadata
  userAgent   String?  @db.Text
  path        String
  metadata    Json?    // Datos adicionales flexibles
  
  // Relaciones
  session     VisitorSession? @relation(fields: [sessionId], references: [id], onDelete: SetNull)
  
  @@index([createdAt])
  @@index([ip])
  @@index([category])
  @@index([action])
}

// ── Bypass Attempts (NUEVO) ─────────────────────────────────────────
model BypassAttempt {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  
  // Identificación
  ip          String
  sessionId   String?
  
  // Bypass data
  reason      String           // accessibility, mobile, urgency, human
  trustScore  Int              // 0-100
  approved    Boolean
  
  // Interaction data (almacenado como JSON)
  interactionData Json?
  
  // Relaciones
  session     VisitorSession? @relation(fields: [sessionId], references: [id], onDelete: SetNull)
  
  @@index([createdAt])
  @@index([ip])
  @@index([approved])
}

// ── Banned Nodes (NUEVO - Opcional, si quieres persistencia) ─────────
model BannedNode {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  ip          String   @unique
  reason      String
  expiresAt   DateTime
  nodeType    String   @default("byzantine")
  
  // Historial
  previousBans Int     @default(0)
  threatScore  Float?
  
  // Metadata del ban
  signatures  String[]
  path        String?
  
  @@index([expiresAt])
  @@index([ip])
}

// ── Access Tokens (NUEVO - Opcional) ────────────────────────────────
model AccessToken {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  expiresAt   DateTime
  
  token       String   @unique
  method      String   // pow, bypass
  
  // Identificación
  ip          String
  sessionId   String?
  
  // Metadata
  metadata    Json?    // challengeId, trustScore, etc.
  
  @@index([token])
  @@index([expiresAt])
}

// ── User Feedback ────────────────────────────────────────────────────
model Feedback {
  id        String       @id @default(cuid())
  createdAt DateTime     @default(now())
  type      FeedbackType
  rating    Int?         @default(0)
  message   String?      @db.Text
  helpful   Boolean?

  session   VisitorSession? @relation(fields: [sessionId], references: [id], onDelete: SetNull)
  sessionId String?
}

// ── Enums ────────────────────────────────────────────────────────────
enum MessageRole {
  user
  assistant
  system
}

enum TipStatus {
  PENDING
  SETTLED
  FAILED
  EXPIRED
  CANCELLED
}

enum FeedbackType {
  POSITIVE
  NEGATIVE
  SUGGESTION
  BUG
}